# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Development Database Configuration
DEV_DATABASE_URL=jdbc:postgresql://your-dev-host:5432/your-dev-database
DEV_DATABASE_USERNAME=your-dev-username
DEV_DATABASE_PASSWORD=your-dev-password

# Production Database Configuration
DATABASE_URL=jdbc:postgresql://your-prod-host:5432/your-prod-database
DATABASE_USERNAME=your-prod-username
DATABASE_PASSWORD=your-prod-password
DATABASE_DRIVER=org.postgresql.Driver

# JPA Configuration
JPA_DDL_AUTO=update
JPA_DIALECT=org.hibernate.dialect.PostgreSQLDialect
JPA_SHOW_SQL=false

# JWT Configuration
DEV_JWT_SECRET=your-dev-jwt-secret
JWT_SECRET=your-prod-jwt-secret
JWT_EXPIRATION=86400000